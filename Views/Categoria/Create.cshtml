@model Flashcard.Models.CategoriaModel
@{
    ViewData["title"] = "Criar categoria";
}

<h1>@ViewData["title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome da categoria</label>
        <input asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Criar</button>
</form>