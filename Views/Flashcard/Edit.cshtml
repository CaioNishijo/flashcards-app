@model Flashcard.Models.FlashcardModel
@{
    ViewData["title"] = "Editar flashcard";
}

<h1>@ViewData["title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Pergunta" class="control-label">Pergunta</label>
        <input asp-for="Pergunta" class="form-control"/>
        <span asp-validation-for="Pergunta"></span>
    </div>
    <div class="form-group">
        <label asp-for="Resposta" class="control-label">Resposta</label>
        <input asp-for="Resposta" class="form-control"/>
        <span asp-validation-for="Resposta"></span>
    </div>
    <input hidden asp-for="BaralhoId"/>
    @*<input hidden asp-for="DataCriacao">*@
    <div class="form-group">
        <label asp-for="CategoriaId">Categoria</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Editar</button>
</form>