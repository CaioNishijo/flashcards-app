@model Flashcard.Models.BaralhoModel
@{
    ViewData["title"] = "Criar baralho";
}

<h1>@ViewData["title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome do Baralho</label>
        <input asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Criar</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Cancelar</a>
</form>
